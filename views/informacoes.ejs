<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

    <!-- CSS -->
    <link href="css/index.css" rel="stylesheet" />
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/bootstrap-dash.css?v=1.4.0" rel="stylesheet" />

    <!-- Javascript  -->
    <script src="js/jquery.js" type="text/javascript"></script>
    <script src="js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="js/bootstrap-dash.js"></script>
    <script src="js/scrollbarEffect.js"></script>

    <!-- Grafico -->
    <script src="js/Chart.bundle.min.js"></script>

    <!-- Maps -->
    <script src="js/map.js" async defer></script>


</head>

<body id="information-area">

    <div class="wrapper">
        <div id="sidebar" class="sidebar" data-image="img/sidebarpaper.jpg" data-color="black">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/" class="simple-text">
                        Menu
                    </a>
                </div>

                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="nc-icon nc-square-pin"></i>
                            <p>Mapa</p>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/detalhes">
                            <i class="nc-icon nc-chart-pie-35"></i>
                            <p>Informações</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>


        <div id="content" class="container-fluid">
            
            <nav id="barra" class="navbar navbar-expand-lg navbar-dark bg-dark" color-on-scroll="500">
                <div id="sidebarCollapse" class="animated-icon3 third-button"><span></span><span></span><span></span></div>
                <!-- Navbar content -->

                <a class="navbar-brand" href="/detalhes" style="margin-left: 5%">Informações</a>

                <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="no-icon">Opção 1</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="no-icon">Opção 2</span>
                            </a>
                        </li>
                    </ul>
                
            </nav>

        </div>

</body>

<script>


    $(document).ready(function () {

        $("#sidebar").mCustomScrollbar({
            theme: "minimal"
        });

        $("#sidebarCollapse").mCustomScrollbar({
            theme: "minimal"
        });

        $('#sidebarCollapse').on('click', function () {

            $('#sidebar').toggleClass('active');
            $('#sidebarCollapse')
                .toggleClass('ativado')

            $('.collapse.in').toggleClass('in');
            $('a[aria-expanded=true]').attr('aria-expanded', 'false');

        });

        $('.third-button').on('click', function () {
            $('.animated-icon3').toggleClass('open');
        });

    });

    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: -23.5875135, lng: -46.6589331 },
            zoom: 15,
            styles: [{
                "featureType": "poi",
                "stylers": [{
                    "visibility": "off"
                }]
            }],
            scrollwheel: false,
            disableDefaultUI: true
        });
    }


</script>

</html>